<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEBB6"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="почта: почта@example.com"
        android:textSize="20sp"
        android:layout_below="@id/textViewSettingsTitle"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="пароль: "
        android:textSize="20sp"
        android:layout_below="@id/textViewEmail"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="забыли? напомним"
        android:layout_below="@id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonChangeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="сменить почту"
        android:backgroundTint="#FFFFFF"
        android:textColor="#808080"
        android:layout_below="@id/textViewForgotPassword"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="сменить пароль"
        android:backgroundTint="#FFFFFF"
        android:textColor="#808080"
        android:layout_below="@id/buttonChangeEmail"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>


</RelativeLayout>
