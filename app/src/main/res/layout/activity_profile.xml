<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEBB6"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="профиль"
        android:backgroundTint="#8BC34A"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ник"
        android:textSize="20sp"
        android:layout_below="@id/buttonProfileTitle"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="прогресс:"
        android:textSize="20sp"
        android:layout_below="@id/textViewNick"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="друзья: друзья типо кнопка ведущая на список"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@id/textViewProgress"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewQuote"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="цитата про шашки"
        android:gravity="center"
        android:background="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewFriends"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="настройки"
        android:textSize="18sp"
        android:layout_below="@id/textViewQuote"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/textViewLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="выход"
        android:textSize="18sp"
        android:layout_below="@id/textViewSettings"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_dark"
        android:clickable="true"
        android:focusable="true"/>

</RelativeLayout>
