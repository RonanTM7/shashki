<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEBB6"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Профиль пользователя"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя пользователя"
        android:textSize="20sp"
        android:layout_below="@id/textViewProfileTitle"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="прогресс:"
        android:textSize="20sp"
        android:layout_below="@id/textViewUsername"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Друзья"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@id/textViewProgress"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewQuote"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="цитата про шашки"
        android:gravity="center"
        android:background="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewFriends"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>


    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:backgroundTint="#FFFFFF"
        android:textColor="#808080"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
