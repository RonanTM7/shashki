<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEBB6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать в мир шашек"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/buttonAchievements"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Достижения"
        android:backgroundTint="#8BC34A"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonProgress"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/buttonProgress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Прогресс"
        android:backgroundTint="#FFB74D"
        app:layout_constraintTop_toTopOf="@id/buttonAchievements"
        app:layout_constraintStart_toEndOf="@id/buttonAchievements"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Профиль"
        android:backgroundTint="#4285F4"
        app:layout_constraintTop_toBottomOf="@id/buttonAchievements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <Button
        android:id="@+id/buttonRules"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Правила"
        android:backgroundTint="#7E57C2"
        app:layout_constraintTop_toBottomOf="@id/buttonProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonLegends"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonLegends"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Легенды"
        android:backgroundTint="#9CCC65"
        app:layout_constraintTop_toTopOf="@id/buttonRules"
        app:layout_constraintStart_toEndOf="@id/buttonRules"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonArticles"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Статьи"
        android:backgroundTint="#BA68C8"
        app:layout_constraintTop_toBottomOf="@id/buttonRules"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSettings"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Настройка"
        android:backgroundTint="#FF8A65"
        app:layout_constraintTop_toTopOf="@id/buttonArticles"
        app:layout_constraintStart_toEndOf="@id/buttonArticles"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonFriends"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Друзья"
        app:layout_constraintTop_toBottomOf="@id/buttonArticles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
